---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import CategorySidebar from '../components/CategorySidebar.astro';
import Footer from '../components/Footer.astro';

const title = 'Paket Wisata Dieng 1 Hari';
const description = 'Jelajahi Dieng dalam satu hari penuh. Paket wisata 1 hari cocok untuk perjalanan singkat namun tetap maksimal, lengkap dengan fasilitas dan destinasi utama.';
---

<BaseLayout {title} {description}>
  <Header />
  <Navigation />

  <main class="main-content">
    <CategorySidebar />

    <section class="seasonal">
